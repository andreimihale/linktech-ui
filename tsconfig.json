{
  "include": ["src"],
  "exclude": ["node_modules", "src/stories"],
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES5",
    "rootDir": "src",
    "outDir": "dist",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "moduleResolution": "node",
    "sourceMap": false,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react-jsx"
  }
}
